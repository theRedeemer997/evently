<div
    id="notification-block"
    class="alert alert-warning alert-dismissible fade show d-block mb-0"
    role="alert"
>
    <strong><%= salutation %></strong>&nbsp;&nbsp;<%= notification%>
    <button
        onClick="closeNotification('notification-block')"
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
    ></button>
</div>
